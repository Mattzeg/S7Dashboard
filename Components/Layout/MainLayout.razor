@inherits LayoutComponentBase
@inject S7Dashboard.Services.SidebarStateService SidebarState
@implements IDisposable

<div class="page">
    <div class="sidebar" style="@GetSidebarStyle()">
        <NavMenu />
    </div>

    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">ðŸ—™</span>
</div>

@code {
    protected override void OnInitialized()
    {
        SidebarState.OnChange += StateHasChanged;
    }

    private string GetSidebarStyle()
    {
        return SidebarState.IsCollapsed ? "width: 60px; overflow: hidden;" : "width: 250px;";
    }

    public void Dispose()
    {
        SidebarState.OnChange -= StateHasChanged;
    }
}
