@using S7Dashboard.Services
@inject DataPollingService PollingService

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">S7 Dashboard</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Dashboard
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="settings">
                <span class="bi bi-gear-fill-nav-menu" aria-hidden="true"></span> Einstellungen
            </NavLink>
        </div>
    </nav>

    <div class="connection-status px-3 py-2">
        @if (PollingService.IsConnected)
        {
            <span class="status-indicator connected"></span>
            <span>Verbunden</span>
        }
        else
        {
            <span class="status-indicator disconnected"></span>
            <span>Nicht verbunden</span>
        }
    </div>
</div>
