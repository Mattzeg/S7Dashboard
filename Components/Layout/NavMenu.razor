@using S7Dashboard.Services
@inject DataPollingService PollingService
@inject SidebarStateService SidebarState
@implements IDisposable

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">@(SidebarState.IsCollapsed ? "S7" : "S7 Dashboard")</a>
        <button class="sidebar-toggle" @onclick="ToggleSidebar" title="@(SidebarState.IsCollapsed ? "Seitenleiste einblenden" : "Seitenleiste ausblenden")">
            @if (SidebarState.IsCollapsed)
            {
                <span class="toggle-icon">&#9654;</span>
            }
            else
            {
                <span class="toggle-icon">&#9664;</span>
            }
        </button>
    </div>
</div>

@if (!SidebarState.IsCollapsed)
{
    <div class="nav-scrollable">
        <nav class="nav flex-column">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Dashboard
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="settings">
                    <span class="bi bi-gear-fill-nav-menu" aria-hidden="true"></span> Einstellungen
                </NavLink>
            </div>
        </nav>

        <div class="connection-status px-3 py-2">
            @if (PollingService.IsConnected)
            {
                <span class="status-indicator connected"></span>
                <span>Verbunden</span>
            }
            else
            {
                <span class="status-indicator disconnected"></span>
                <span>Nicht verbunden</span>
            }
        </div>
    </div>
}

@code {
    protected override void OnInitialized()
    {
        SidebarState.OnChange += StateHasChanged;
    }

    private void ToggleSidebar()
    {
        SidebarState.Toggle();
    }

    public void Dispose()
    {
        SidebarState.OnChange -= StateHasChanged;
    }
}
